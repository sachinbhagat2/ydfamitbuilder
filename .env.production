
# Use Replit's built-in PostgreSQL database
USE_MOCK_DB=false

# Authentication
JWT_SECRET=your-super-secret-jwt-key-make-it-long-and-random-123456789
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Application
NODE_ENV=production
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database will use Replit's DATABASE_URL automatically
# No need to set DATABASE_URL manually - Replit provides it

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@ydf.org

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx
