# Database Configuration
# For MySQL, use individual environment variables (recommended):
DB_HOST="localhost"
DB_PORT="3306"
DB_USER="ydf_user"
DB_PASSWORD="secure_password"
DB_NAME="youth_dreamers_foundation"
DB_SSL="false"

# OR use DATABASE_URL for PostgreSQL:
# DATABASE_URL="postgresql://username:password@hostname:port/database"

# For Bluehost MySQL (as per your setup):
# DB_HOST="bluehost.in"
# DB_USER="sparsind_ydf"
# DB_PASSWORD="your_password"
# DB_NAME="sparsind_ydf_ngo"
# DB_SSL="false"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"
BCRYPT_ROUNDS="12"

# Email Configuration (for notifications)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"
SMTP_FROM="noreply@ydf.org"

# File Upload Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760"
ALLOWED_FILE_TYPES="pdf,jpg,jpeg,png,doc,docx"

# Application Configuration
NODE_ENV="development"
PORT="3000"
FRONTEND_URL="http://localhost:5173"

# Third-party Integrations (Optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
LINKEDIN_CLIENT_ID=""
LINKEDIN_CLIENT_SECRET=""
